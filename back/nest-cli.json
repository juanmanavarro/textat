{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "monorepo": true,
  "root": "apps/api",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "assets": [
      "**/**/*.yml"
    ],
    "watchAssets": true
  },
  "projects": {
    "shared": {
      "type": "library",
      "root": "libs/shared",
      "entryFile": "index",
      "sourceRoot": "libs/shared/src",
      "compilerOptions": {
        "tsConfigPath": "libs/shared/tsconfig.lib.json"
      }
    },
    "domain": {
      "type": "library",
      "root": "libs/domain",
      "entryFile": "index",
      "sourceRoot": "libs/domain/src",
      "compilerOptions": {
        "tsConfigPath": "libs/domain/tsconfig.lib.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
    "cli": {
      "type": "application",
      "root": "apps/cli",
      "entryFile": "main",
      "sourceRoot": "apps/cli/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cli/tsconfig.app.json"
      }
    },
    "transport": {
      "type": "library",
      "root": "libs/transport",
      "entryFile": "index",
      "sourceRoot": "libs/transport/src",
      "compilerOptions": {
        "tsConfigPath": "libs/transport/tsconfig.lib.json"
      }
    },
    "websocket-service": {
      "type": "application",
      "root": "apps/websocket-service",
      "entryFile": "main",
      "sourceRoot": "apps/websocket-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/websocket-service/tsconfig.app.json"
      }
    },
    "whatsapp-service": {
      "type": "application",
      "root": "apps/whatsapp-service",
      "entryFile": "main",
      "sourceRoot": "apps/whatsapp-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/whatsapp-service/tsconfig.app.json"
      }
    }
  }
}
