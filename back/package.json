{
  "name": "textat",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:websocket-service": "nest build websocket-service",
    "build:whatsapp-service": "nest build whatsapp-service && npm run copy-assets",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "export NODE_ENV=development && nest start",
    "start:dev": "export NODE_ENV=development && nest start --watch",
    "start:preprod": "export NODE_ENV=preprod && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "start:websocket-service": "nest start websocket-service",
    "start:whatsapp-service": "nest start whatsapp-service",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/textat/test/jest-e2e.json",
    "copy-assets": "copyfiles --all --up 1 \"./locales/**/*\" ./dist/locales"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^1.8.1",
    "@nestjs/bull": "^0.6.1",
    "@nestjs/common": "^9.0.0",
    "@nestjs/config": "^2.2.0",
    "@nestjs/core": "^9.0.0",
    "@nestjs/event-emitter": "^1.3.1",
    "@nestjs/jwt": "^9.0.0",
    "@nestjs/microservices": "^9.0.11",
    "@nestjs/mongoose": "^9.2.0",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "^9.0.0",
    "@nestjs/platform-socket.io": "^9.0.11",
    "@nestjs/schedule": "^2.1.0",
    "@nestjs/websockets": "^9.0.11",
    "@squareboat/nestjs-localization": "^0.0.4",
    "axios": "^1.2.1",
    "bignumber.js": "^9.1.0",
    "body-parser": "^1.20.1",
    "bull": "^4.10.1",
    "cache-manager": "^5.1.4",
    "chrono-node": "github:S4M3R/chrono",
    "city-timezones": "^1.2.1",
    "copyfiles": "^2.4.1",
    "crypto-js": "^4.1.1",
    "cryptr": "^6.1.0",
    "dayjs": "^1.11.5",
    "detectlanguage": "^2.1.0",
    "find-process": "^1.4.7",
    "ioredis": "^5.2.3",
    "mongoose": "^6.5.2",
    "nest-commander": "^3.1.0",
    "nest-winston": "^1.8.0",
    "node-json-transform": "^1.1.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.0",
    "phone-number-to-timezone": "^1.0.8",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "sprintf-js": "^1.1.2",
    "stripe": "^10.7.0",
    "vcard-parser": "^1.0.0",
    "winston": "^3.8.2",
    "winston-mongodb": "^5.1.0",
    "yaml": "^2.1.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.0",
    "@nestjs/testing": "^9.1.6",
    "@types/bull": "^4.10.0",
    "@types/cron": "^2.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "28.1.4",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "28.1.2",
    "prettier": "^2.3.2",
    "source-map-support": "^0.5.20",
    "supertest": "^6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "4.0.0",
    "typescript": "^4.3.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@app/shared(|/.*)$": "<rootDir>/libs/shared/src/$1",
      "^@domain/domain(|/.*)$": "<rootDir>/libs/domain/src/$1",
      "^@queue/queue(|/.*)$": "<rootDir>/libs/queue/src/$1",
      "^@mail/mail(|/.*)$": "<rootDir>/libs/mail/src/$1",
      "^@transport/transport(|/.*)$": "<rootDir>/libs/transport/src/$1",
      "^@websocket/websocket(|/.*)$": "<rootDir>/libs/websocket/src/$1"
    }
  }
}
